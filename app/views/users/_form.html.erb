<div class="container mt-4">
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h2>The following errors prevented the User from being saved</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, data: { turbo: false }, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :username %><br>
      <%= f.text_field :username, class: 'form-control', placeholder: "Enter a username" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control', placeholder: "Enter an email" %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control', placeholder: "Enter new password" %>
    </div>

    <div class="form-group">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary') %>
    </div>
  <% end %>
</div>
