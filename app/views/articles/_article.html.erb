<div class="container mt-4">
  <h1>Article List</h1>

  <table class="table table-bordered">
    <thead class="thead-light">
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.user.username if article.user %></td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-secondary btn-sm' %></td>
        <td><%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <p>
    <%= link_to 'Create new article', new_article_path, class: 'btn btn-success' %>
  </p>
</div>