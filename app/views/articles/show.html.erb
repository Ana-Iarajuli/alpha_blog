<div class="container mt-4">
  <h1>Showing Article Details</h1>

  <p><strong>Author: </strong><%= @article.user.username if @article.user %></p>
  <p><strong>Title: </strong><%= @article.title %></p>
  <p><strong>Description: </strong><%= @article.description %></p>

  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary mr-2' %>
  <%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger mr-2' %>
  <%= link_to 'Return to Articles Listing', articles_path, class: 'btn btn-secondary' %>
</div>
