<div class="container mt-4">
  <h1>Login for Alpha Blog</h1>

    <%= form_with(scope: :session, url: login_path, data: { turbo: false }, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br>
        <%= f.email_field :email, class: 'form-control', placeholder: "Enter an email" %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br>
        <%= f.password_field :password, class: 'form-control', placeholder: "Enter your password" %>
      </div>

      <div class="form-group">
        <%= f.submit "Login", class: 'btn btn-primary' %>
      </div>
    <% end %>

</div>
